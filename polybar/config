[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify_status.py -f '{artist} - {song}'
click-left = playerctl -p spotify previous
click-middle = playerctl -p spotify play-pause
click-right = playerctl -p spotify next


[module/alsa]
